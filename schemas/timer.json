{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "object",
	"properties": {
		"raw": {"type": "number"},
		"hours": {"type": "number"},
		"minutes": {"type": "number"},
		"seconds": {"type": "number"},
		"formatted": {"type": "string"},
		"timestamp": {"type": "number"},
		"timerState": {
			"enum": ["Finished", "Running", "Stopped"],
			"type": "string"
		},
		"results": {
			"type": "array",
			"items": {
				"oneOf": [
					{"type": "null"},
					{
						"type": "object",
						"additionalProperties": false,
						"properties": {
							"raw": {"type": "number"},
							"hours": {"type": "number"},
							"minutes": {"type": "number"},
							"seconds": {"type": "number"},
							"formatted": {"type": "string"},
							"timestamp": {"type": "number"},
							"timerState": {
								"enum": ["Finished", "Running", "Stopped"],
								"type": "string"
							},
							"forfeit": {"type": "boolean"},
							"place": {"type": "number"}
						},
						"required": [
							"raw",
							"hours",
							"minutes",
							"seconds",
							"formatted",
							"timestamp",
							"timerState",
							"forfeit"
						]
					}
				]
			}
		},
		"forfeit": {"type": "boolean"}
	},
	"required": [
		"raw",
		"hours",
		"minutes",
		"seconds",
		"formatted",
		"timestamp",
		"timerState",
		"results",
		"forfeit"
	]
}
