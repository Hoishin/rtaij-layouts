{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"type": "object",
	"additionalProperties": false,
	"required": ["twitch", "twitter"],
	"properties": {
		"horaroId": {
			"type": "string"
		},
		"runnerSpreadsheetId": {
			"type": "string"
		},
		"twitter": {
			"type": "object",
			"additionalProperties": false,
			"required": [
				"targetWords",
				"maxTweets",
				"consumerKey",
				"consumerSecret"
			],
			"properties": {
				"targetWords": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"maxTweets": {
					"type": "number",
					"default": 100
				},
				"consumerKey": {
					"type": "string"
				},
				"consumerSecret": {
					"type": "string"
				}
			}
		},
		"twitch": {
			"type": "object",
			"additionalProperties": false,
			"required": ["targetChannel", "titleTemplate"],
			"properties": {
				"targetChannel": {
					"type": "string"
				},
				"titleTemplate": {
					"type": "string"
				}
			}
		}
	}
}
