{
  "name": "rtainjapan",
  "version": "0.0.0",
  "description": "The on-stream layout for RTA in Japan speedrunning marathon event",
  "homepage": "https://rtainjapan.net/",
  "author": {
    "name": "Hoishin",
    "email": "hoishinxii@gmail.com",
    "url": "https://twitter.com/hoishinxii"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension"
  ],
  "nodecg": {
    "compatibleRange": "^0.9.8",
    "dashboardPanels": [
      {
        "name": "配信担当ダッシュボード",
        "title": "配信担当ダッシュボード",
        "file": "stream-tech-dashboard.html",
        "headerColor": "#9f9bbd",
        "fullbleed": true
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1280,
        "height": 720
      }
    ]
  },
  "xo": {
    "space": false,
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "nodecg.Replicant"
          ]
        }
      ],
      "strict": [
        "error",
        "global"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxBOF": 0,
          "maxEOF": 1
        }
      ]
    },
    "semicolon": true,
    "esnext": true,
    "overrides": [
      {
        "files": "{dashboard,graphics}/**",
        "envs": [
          "browser"
        ],
        "globals": [
          "nodecg",
          "Polymer"
        ]
      },
      {
        "files": "extension/**",
        "envs": [
          "node"
        ]
      }
    ]
  },
  "scripts": {
    "lint": "node_modules/.bin/xo --fix"
  },
  "dependencies": {
    "clone": "^2.1.1",
    "superagent": "^3.8.0",
    "twemoji": "^2.5.0",
    "twitter-stream-api": "^0.5.2",
    "vue": "^2.5.9"
  },
  "devDependencies": {
    "eslint": "^4.13.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-polymer": "^0.1.0",
    "xo": "^0.18.2"
  },
  "keywords": [
    "nodecg-bundle"
  ],
  "license": "MIT"
}
