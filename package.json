{
	"name": "rtainjapan-layouts",
	"version": "0.0.0",
	"author": {
		"name": "Hoishin",
		"email": "hoishinxii@gmail.com",
		"url": "https://twitter.com/hoishinxii"
	},
	"description": "The on-stream layout for RTA in Japan speedrunning marathon event",
	"nodecg": {
		"compatibleRange": "^0.9.8",
		"assetCategories": [
			{
				"name": "sponsorLogos",
				"title": "スポンサーロゴ",
				"allowedTypes": [
					"png"
				]
			}
		],
		"dashboardPanels": [
			{
				"name": "stream",
				"title": "配信担当ダッシュボード",
				"file": "stream-tech-dashboard.html",
				"headerColor": "#9f9bbd",
				"fullbleed": true
			}
		],
		"graphics": [
			{
				"file": "3ds.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "break.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "ds.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "ds_h.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "gb1.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "gb2.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "hd1.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "hd2.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "sd1.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "sd1_m64.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "sd2.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "necro.html",
				"width": 1920,
				"height": 1080
			}
		]
	},
	"xo": {
		"globals": [
			"nodecg"
		],
		"extensions": [
			"js",
			"html"
		],
		"prettier": true,
		"rules": {
			"new-cap": [
				"error",
				{
					"capIsNewExceptions": [
						"nodecg.Replicant"
					]
				}
			]
		},
		"overrides": [
			{
				"files": "dashboard/**/*",
				"envs": [
					"browser"
				]
			},
			{
				"files": "graphics/**/*",
				"envs": [
					"browser"
				]
			},
			{
				"files": "shared/**/*",
				"envs": [
					"browser"
				]
			}
		]
	},
	"scripts": {
		"format": "xo --fix"
	},
	"license": "MIT",
	"repository": "RTAinJapan/rtainjapan-layouts",
	"homepage": "https://rtainjapan.net/",
	"dependencies": {
		"clone": "^2.1.1",
		"superagent": "^3.8.2"
	},
	"devDependencies": {
		"eslint": "^4.15.0",
		"eslint-plugin-vue": "^4.2.0",
		"prettier": "^1.10.2",
		"xo": "^0.18.2"
	}
}
