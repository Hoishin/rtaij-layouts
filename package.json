{
	"private": true,
	"scripts": {
		"format": "prettier '**/*.{ts,tsx,json,html}' --write",
		"postinstall": "make postinstall",
		"lint": "tslint -p . -t stylish",
		"start": "node node_modules/nodecg"
	},
	"husky": {
		"hooks": {
			"pre-commit": "depcruise rtainjapan-layouts/src && lint-staged"
		}
	},
	"dependencies": {
		"nodecg": "1.3.0"
	},
	"devDependencies": {
		"@hoishin/tslint-config": "^2.0.2",
		"dependency-cruiser": "^4.8.0",
		"husky": "^1.2.0",
		"lint-staged": "^8.1.0",
		"prettier": "^1.15.3",
		"sort-package-json": "^1.17.0",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.17.0",
		"typescript": "^3.2.2"
	},
	"engines": {
		"node": "^10.14.0"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"tslint -p . -t stylish --fix",
			"git add"
		],
		"*.{ts,tsx,json,html}": [
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	}
}
