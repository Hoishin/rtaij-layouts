{
	"name": "rtainjapan-layouts",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"bundle": "node scripts/bundle.js",
		"start": "(cd ../.. && node index.js)",
		"schema-types": "node scripts/schema-types.js",
		"format": "prettier '{{src,types,schemas}/**,.}/*.{ts,tsx,js,jsx,json}' --write"
	},
	"dependencies": {
		"@material-ui/core": "^1.4.0",
		"@material-ui/icons": "^1.1.0",
		"axios": "^0.18.0",
		"crypto": "^1.0.1",
		"date-fns": "^1.29.0",
		"delay": "^3.0.0",
		"downshift": "^2.0.14",
		"load-json-file": "^5.0.0",
		"lodash": "^4.17.10",
		"oauth-1.0a": "^2.2.4",
		"react": "^16.4.1",
		"react-dom": "^16.4.1",
		"source-map-support": "^0.5.6",
		"styled-components": "^3.3.3",
		"write-json-file": "^2.3.0"
	},
	"devDependencies": {
		"@types/delay": "^2.0.1",
		"@types/load-json-file": "^2.0.7",
		"@types/lodash": "^4.14.112",
		"@types/node": "^10.5.2",
		"@types/react": "^16.4.6",
		"@types/react-dom": "^16.0.6",
		"@types/source-map-support": "^0.4.1",
		"@types/write-json-file": "^2.2.1",
		"app-root-path": "^2.1.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-config-xo-react": "^0.17.0",
		"eslint-config-xo-typescript": "^0.1.0",
		"eslint-plugin-react": "^7.10.0",
		"eslint-plugin-typescript": "^0.12.0",
		"json-schema-to-typescript": "^5.5.0",
		"parcel-bundler": "^1.9.7",
		"prettier": "^1.13.7",
		"pug": "^2.0.3",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.14.0",
		"typescript": "^2.9.2",
		"typescript-eslint-parser": "^17.0.1",
		"xo": "^0.21.1"
	},
	"engines": {
		"node": "^10.0.0",
		"browsers": "last 1 chrome versions"
	},
	"nodecg": {
		"compatibleRange": "^1.0.0",
		"dashboardPanels": [
			{
				"name": "stream",
				"title": "配信担当ダッシュボード",
				"file": "tech.html",
				"headerColor": "#00BEBE",
				"fullbleed": true
			},
			{
				"name": "twitter-account",
				"title": "Twitterアカウント",
				"file": "twitter-account.html",
				"width": 3,
				"headerColor": "#00BEBE",
				"workspace": "Misc"
			}
		],
		"graphics": [
			{
				"file": "break.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "ds1.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "gb1.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "hd1.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "sd1.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "sd2.html",
				"width": 1920,
				"height": 1080
			},
			{
				"file": "sd3.html",
				"width": 1920,
				"height": 1080
			}
		],
		"assetCategories": [
			{
				"name": "sponsorLogos",
				"title": "スポンサーロゴ",
				"allowedTypes": [
					"png"
				]
			}
		],
		"mount": [
			{
				"directory": "twitter-callback",
				"endpoint": "twitter-callback"
			}
		]
	},
	"xo": {
		"extends": [
			"xo-react",
			"xo-typescript",
			"prettier"
		],
		"extensions": [
			"ts",
			"tsx"
		],
		"rules": {
			"no-undef": 0,
			"import/no-unresolved": 0,
			"react/jsx-tag-spacing": 0,
			"new-cap": [0, { "capIsNewExceptions": ["Replicant"] }],
			"no-unused-vars": 0
		},
		"ignores": ["./types/schemas", "./scripts", "**/*.d.ts"]
	}
}
