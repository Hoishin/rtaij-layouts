{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["esnext"],
		"outDir": "build",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": [
		"src"
	]
}
